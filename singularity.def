BootStrap: docker
From: nvidia:12.1.0-devel-ubuntu22.04

%files
    ./requirements.txt /app/requirements.txt
	./textfooler.ipynb /app/textfooler.ipynb

%labels
	Author Redhawk18
	MyLabel textfooler

%post
	apt update
	apt install build-essential python3.11 -y

	cd /app
	pip install -r ./requirements.txt

	jupyter nbconvert --to script textfooler.ipynb

%runscript
	python3 /app/textfooler.py

